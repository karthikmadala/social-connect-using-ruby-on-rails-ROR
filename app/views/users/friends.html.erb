<h1>My Friends</h1>

<% if @friends.any? %>
  <% @friends.each do |friend| %>
    <p><%= friend.first_name %> <%= friend.last_name %></p>
    <%= button_to "Unfriend", unfriend_path(friend.id), method: :delete, class: "btn btn-danger" %>
  <% end %>
<% else %>
  <p>You have no friends yet.</p>
<% end %>
