<div class="container mt-5">
  <h1 class="mb-4">Your Friends</h1>

  <% if @friends.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @friends.each do |friend| %>
        <div class="col">
          <div class="card shadow-sm p-3">
            <div class="d-flex align-items-center">
              <% if friend.avatar.attached? %>
                <%= image_tag friend.avatar.variant(resize_to_limit: [60, 60]).processed, class: "rounded-circle img-thumbnail me-3" %>
              <% else %>
                <%= image_tag "default-user.jpg", class: "rounded-circle img-thumbnail me-3", alt: "Default User", width: 60, height: 60 %>
              <% end %>
              <div>
                <h5 class="mb-0"><%= friend.first_name %> <%= friend.last_name %></h5>
                <p class="text-muted small mb-0"><%= friend.email %></p>
              </div>
            </div>
            <div class="mt-3">
              <%= button_to 'Unfriend', unfriend_friendships_path(friend_id: friend.id), 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: 'btn btn-danger btn-sm w-100' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You have no friends yet.</p>
  <% end %>

  <h2 class="mt-5">Friend Requests Sent By You</h2>

  <% if @pending_requests.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @pending_requests.each do |request| %>
        <div class="col">
          <div class="card shadow-sm p-3">
            <div class="d-flex align-items-center">
              <% if request.friend.avatar.attached? %>
                <%= image_tag request.friend.avatar.variant(resize_to_limit: [60, 60]).processed, class: "rounded-circle img-thumbnail me-3" %>
              <% else %>
                <%= image_tag "default-user.jpg", class: "rounded-circle img-thumbnail me-3", alt: "Default User", width: 60, height: 60 %>
              <% end %>
              <div>
                <h5 class="mb-0"><%= request.friend.full_name %></h5>
                <p class="text-muted small mb-0"><%= request.friend.email %></p>
              </div>
            </div>
            <div class="mt-3">
              <%= button_to 'Cancel Request', unfriend_friendships_path(friend_id: request.friend.id), 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: 'btn btn-warning btn-sm w-100' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You have no pending friend requests.</p>
  <% end %>
</div>
