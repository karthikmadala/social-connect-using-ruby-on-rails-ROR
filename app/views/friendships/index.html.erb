<div class="container mt-5">
  <h1 class="text-center text-white mb-4">Your Friends</h1>

  <% if @friends.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @friends.each do |friend| %>
        <div class="col">
          <div class="card shadow-sm glass-container p-3">
            <div class="d-flex align-items-center">
              <% if friend.avatar.attached? %>
                <%= image_tag friend.avatar.variant(resize_to_limit: [60, 60]).processed, class: "rounded-circle img-thumbnail me-3 border-white" %>
              <% else %>
                <%= image_tag "default-user.jpg", class: "rounded-circle img-thumbnail me-3 border-white", alt: "Default User", width: 60, height: 60 %>
              <% end %>
              <div>
                <h5 class="mb-0 text-white"><%= friend.first_name %> <%= friend.last_name %></h5>
                <p class="text-muted small mb-0"><%= friend.email %></p>
              </div>
            </div>
            <div class="mt-3">
              <%= button_to 'Unfriend', unfriend_friendships_path(friend_id: friend.id), 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: 'btn btn-danger btn-sm w-100 btn-gradient' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-white">You have no friends yet.</p>
  <% end %>

  <h2 class="text-center text-white mt-5 mb-4">Friend Requests Sent By You</h2>

  <% if @pending_requests.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @pending_requests.each do |request| %>
        <div class="col">
          <div class="card shadow-sm glass-container p-3">
            <div class="d-flex align-items-center">
              <% if request.friend.avatar.attached? %>
                <%= image_tag request.friend.avatar.variant(resize_to_limit: [60, 60]).processed, class: "rounded-circle img-thumbnail me-3 border-white" %>
              <% else %>
                <%= image_tag "default-user.jpg", class: "rounded-circle img-thumbnail me-3 border-white", alt: "Default User", width: 60, height: 60 %>
              <% end %>
              <div>
                <h5 class="mb-0 text-white"><%= request.friend.full_name %></h5>
                <p class="text-muted small mb-0"><%= request.friend.email %></p>
              </div>
            </div>
            <div class="mt-3">
              <%= button_to 'Cancel Request', unfriend_friendships_path(friend_id: request.friend.id), 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: 'btn btn-warning btn-sm w-100 btn-gradient' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-white">You have no pending friend requests.</p>
  <% end %>
</div>

<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    background-attachment: fixed;
    font-family: 'Poppins', sans-serif;
  }

  .glass-container {
    background: rgba(255, 255, 255, 0.1); /* Transparent White */
    backdrop-filter: blur(15px); /* Frosted Glass Effect */
    -webkit-backdrop-filter: blur(15px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2); /* Soft Shadow */
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.18);
    animation: fadeIn 1s ease-in-out;
  }

  .btn-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    color: white;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .btn-gradient:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .btn-danger {
    background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
  }

  .btn-warning {
    background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
  }

  .text-white {
    color: white !important;
  }

  .border-white {
    border: 3px solid rgba(255, 255, 255, 0.5);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .text-muted {
    color: rgba(255, 255, 255, 0.7) !important;
  }
</style>