<div class="position-fixed end-0 top-10 m-4" style="z-index: 1050;">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show small-alert" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="alert alert-danger alert-dismissible fade show small-alert" role="alert">
      <%= alert %>
    </div>
  <% end %>
</div>

<style>
  .small-alert {
    font-size: 14px; 
    padding: 8px 12px;
    max-width: 300px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    opacity: 0.9;
  }

  .position-fixed {
    top: 40px;
    right: 20px; /* Aligns it to the right */
  }
</style>

<script>
  setTimeout(function() {
    document.querySelectorAll('.alert').forEach(alert => {
      let bsAlert = new bootstrap.Alert(alert);
      bsAlert.close();
    });
  }, 6000);
</script>
