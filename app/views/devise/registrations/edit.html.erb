<div class="d-flex justify-content-center align-items-center vh-200">
  <div class="glass-container p-4 rounded">
    <h2 class="text-center text-white"><%= image_tag "k-logo-removebg-preview.png",class: " img",width: 50, height: 50 %> <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :first_name, class: "text-white" %>
          <%= f.text_field :first_name, class: "form-control", autofocus: true %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :last_name, class: "text-white" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "text-white" %>
        <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, class: "text-white" %>
        <%= f.text_field :phone, class: "form-control", autocomplete: "tel" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, class: "text-white" %>
        <%= f.file_field :avatar, accept: "image/*", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: "text-white" %> <i class="text-light">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password",placeholder: "Enter your new password" %>
        <% if @minimum_password_length %>
          <small class="text-light"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "text-white" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password",placeholder: "Enter your new password again" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "text-white" %> <i class="text-light">(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" ,placeholder: "Enter your password"%>
      </div><br/>

      <div class="form-group text-center">
        <%= f.submit "Update", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <h3 class="text-white text-center">Cancel my account</h3>

    <div class="text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100 my-2" %>
       <%= link_to "Back", :back, class: "btn btn-secondary w-100" %> 
    </div> 
  </div>
</div>

<style>
  .glass-container {
    background: rgba(255, 255, 255, 0.2); /* Transparent White */
    backdrop-filter: blur(10px); /* Frosted Glass Effect */
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Soft Shadow */
    border-radius: 15px;
    max-width: 500px;
    width: 100%;
  }
</style>
